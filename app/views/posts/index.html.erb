<h2>ホーム画面</h2>

<p><%= notice %></p>

<%= link_to '新しくポストする', new_post_path %>

<table>
  <% @posts.each do |post| %>
    <tr>
       <td><%= post.content %></td>
       <td><%= link_to '編集', edit_post_path(post.id) %></td>
       <td><%= link_to '削除', post_path(post.id), method: :delete ,data: { confirm: '本当に削除してよろしですか？'} %></td>
    </tr>
  <% end %>
</table>
